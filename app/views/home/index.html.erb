<h1>Calculate your next menstrual cycle period</h1>

<form method="POST">
  <input type="hidden" name="<%= request_forgery_protection_token.to_s %>" value="<%= form_authenticity_token %>" />
  <input id="id_new_menstruation" name="menstruation_date" placeholder="Beginning of menstruation" />
  <input value="Calculate" type="submit" />
</form>

<h2>Last known date of menstrual cycle <%= @initial_date %></h2>

<h2>First day of next menstrual cycles</h2>
<table id="id_menstruations_table">
  <tr><td><%= @menstruation_date %></td></tr>
</table>
